#!/usr/bin/env php
<?php

require __DIR__ . '/vendor/autoload.php';

use Tsc\CatStorageSystem\Commands\CatCommands\DirectoryCommand;
use Tsc\CatStorageSystem\Commands\HollaCommand;
use Tsc\CatStorageSystem\Commands\CatCommands\DirectorySizeCommand;
use Tsc\CatStorageSystem\Commands\CatCommands\FileCountCommand;
use Tsc\CatStorageSystem\Commands\CatCommands\ListCommand;
use Symfony\Component\Console\Application;

$app = new Application();

$app->addCommands([
    new DirectoryCommand(),
    new HollaCommand(),
    new DirectorySizeCommand(),
    new FileCountCommand(),
    new ListCommand(),
]);

$app->run();
